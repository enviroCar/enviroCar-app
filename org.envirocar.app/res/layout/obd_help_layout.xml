<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/obdHelpIamge"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/findobddesgin" />

    <TextView
        android:id="@+id/obdHelpHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Locate"
        android:textAlignment="center"
        android:textColor="@color/blue_dark_cario"
        android:textSize="24dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/blue_dark_cario"
        android:orientation="vertical">

        <TextView
            android:id="@+id/obdHelpText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autoLink="web"
            android:gravity="center"
            android:text="@string/obd_help_content"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14dp" />

    </LinearLayout>

</LinearLayout>