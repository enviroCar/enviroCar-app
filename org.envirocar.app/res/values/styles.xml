<resources xmlns:android="http://schemas.android.com/apk/res/android"
           xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Style for the LinearLayout in the CheckList -->
    <style name="CheckListLayoutStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/checklist_layout_margin_top</item>
        <item name="android:padding">@dimen/checklist_item_padding</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/checkboxitem_background_drawable</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
    </style>

    <style name="Widget.enviroCar.Toolbar" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/blue_dark_cario</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <!--<item name="app:elevation=">6dp</item>-->
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/spacing_large</item>
        <item name="android:paddingRight">@dimen/spacing_large</item>
    </style>

    <style name="Widget.enviroCar.Fab" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/fab_margin_16</item>
        <item name="android:src">@drawable/ic_add_white_24dp</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="Widget.enviroCar.FABSheet" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="enviroCar.title" parent="Base.TextAppearance.AppCompat.SearchResult.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">@dimen/spacing_large</item>
        <item name="android:textColor">@color/blue_dark_cario</item>
    </style>

    <style name="carDetailsSubtitle" pairent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="enviroCar.Settings.General.ListLayout" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginBottom">@dimen/spacing_medium</item>
        <item name="android:layout_marginTop">@dimen/spacing_medium</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="enviroCar.Input.Card.Layout" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/spacing_medium</item>
        <!--<item name="app:cardElevation=">@dimen/spacing_medium</item>-->
        <!--<item name="app:cardUseCompatPadding">true</item>-->
    </style>

    <style name="enviroCar.Input.TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/white_cario</item>
        <item name="android:textSize">20sp</item>
        <item name="colorAccent">@color/white_cario</item>
        <item name="colorControlNormal">@color/white_cario</item>
        <item name="colorControlActivated">@color/white_cario</item>
    </style>
</resources>