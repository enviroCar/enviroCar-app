<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Cario" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_cario</item>
        <item name="popupMenuStyle">@style/PopupMenu.Cario</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Cario</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Cario</item>
        <item name="actionModeBackground">@drawable/cab_background_top_cario</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_cario</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Cario</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="colorPrimary">@color/blue_dark_cario</item>
        <item name="colorPrimaryDark">@color/cario_color_primary_dark</item>
        <item name="colorAccent">@color/blue_light_cario</item>
        <item name="background">@color/background_material_dark</item>
        <item name="android:navigationBarColor">@color/cario_color_primary_dark</item>

        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <!--<item name="android:textColorSecondary">@color/white</item>-->

        <item name="alertDialogTheme">@style/DialogStyle</item>
    </style>



    <style name="ButtonStyle">
        <item name="android:background">@drawable/btn_cario</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#BF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">1</item>
    </style>


    <style name="PopupMenu.Cario" parent="Widget.AppCompat.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_cario</item>
    </style>

    <style name="DropDownListView.Cario" parent="Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_cario</item>
    </style>


    <style name="DropDownNav.Cario" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_cario</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_cario</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_cario</item>
    </style>


    <style name="ActionButton.CloseMode.Cario" parent="Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_cario</item>
    </style>

    <style name="ToolBarStyle" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="DialogStyle" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitlePanelStyle">@style/TitlePaneStyle</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyledialog</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="TitleTextStyledialog" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">50dp</item>
    </style>

    <style name="MaterialDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitlePanelStyle">@style/TitlePaneStyle</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="materialAlertDialogTitleIconStyle">@style/TitleIconStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <!-- Set the title bar -->
    <style name="TitlePaneStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Panel">
        <item name="android:background">@color/blue_dark_cario</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="TitleIconStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Icon">
        <item name="android:tint">#FFFFFF</item>
    </style>

    <style name="TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <!-- Set the body -->
    <style name="BodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- Set the buttons -->
    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/blue_light_cario</item>
    </style>

    <style name="NegativeButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/blue_light_cario</item>
    </style>

</resources>
